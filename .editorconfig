# http://editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# Indentation override for all JS under lib directory
[*.yml]
indent_style = space
indent_size = 2

[{rakefile,gemfile}]
indent_style = space
indent_size = 2